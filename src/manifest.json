{
  "name": "Libra Wallet POC Chrome Extension",
  "description": "An Libra Wallet POC in Chrome Browser inspired by MetaMask",
  "version": "1.0.0",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "libra-extension",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "inpage.js"
  ],
  "permissions": [
    "*://*.testnet.libra.org/*",
    "*://libraservice3.kulap.io/*",
    "*://*.libexplorer.com/*",
    "activeTab",
    "tabs",
    "alarms",
    "storage",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
